{
  "name": "services",
  "version": "0.0.0",
  "description": "A set of serverless services for Sj√∂fartstidningen",
  "main": "index.js",
  "repository": "https://github.com/sjofartstidningen/services.git",
  "author": "Adam Bergman <adam@fransvilhelm.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "test": "jest --env=node",
    "prebuild": "rm -rf build",
    "build": "yarn build:analytics && yarn build:render-main",
    "build:analytics": "parcel build services/analytics/index.js -d build/analytics --target node",
    "build:render-main": "parcel build services/render-mail/index.js -d build/render-mail --target node",
    "predeploy": "yarn run build",
    "deploy": "serverless deploy",
    "predeploy:fn": "yarn run build",
    "deploy:fn": "serverless deploy function",
    "prepackage": "yarn run build",
    "package": "serverless package",
    "preinvoke": "yarn run build",
    "invoke": "serverless invoke local"
  },
  "dependencies": {
    "aws-sdk": "^2.471.0",
    "axios": "^0.19.0",
    "date-fns": "^1.30.1",
    "googleapis": "^40.0.0",
    "handlebars": "^4.1.2",
    "http-errors": "^1.7.2",
    "lodash.deburr": "^4.1.0",
    "mjml": "^4.3.1",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/preset-env": "^7.4.5",
    "@types/node": "^12.0.7",
    "@typescript-eslint/eslint-plugin": "1.x",
    "@typescript-eslint/parser": "1.x",
    "babel-eslint": "10.x",
    "babel-jest": "^24.8.0",
    "commitizen": "^3.1.1",
    "cz-conventional-changelog": "^2.1.0",
    "dotenv": "^8.0.0",
    "eslint": "5.x",
    "eslint-config-react-app": "^4.0.1",
    "eslint-plugin-flowtype": "3.9.1",
    "eslint-plugin-import": "2.x",
    "eslint-plugin-jsx-a11y": "6.x",
    "eslint-plugin-react": "7.x",
    "eslint-plugin-react-hooks": "1.6.0",
    "esm": "^3.2.25",
    "husky": "^2.4.0",
    "jest": "^24.8.0",
    "lint-staged": "^8.2.0",
    "parcel-bundler": "^1.12.3",
    "prettier": "^1.18.2",
    "serverless": "^1.44.1",
    "serverless-dotenv-plugin": "^2.1.1",
    "typescript": "^3.5.1"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "concurrent": false,
    "linters": {
      "*.js": [
        "jest --env=node --passWithNoTests --findRelatedTests",
        "eslint --fix",
        "git add"
      ],
      "*.{js,json,css,md,html,yml}": [
        "prettier --write",
        "git add"
      ]
    }
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "proseWrap": "always"
  }
}
