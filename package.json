{
  "name": "services",
  "version": "0.0.0",
  "description": "A set of serverless services for Sj√∂fartstidningen",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sjofartstidningen/services.git"
  },
  "author": {
    "name": "Adam Bergman",
    "email": "adam@fransvilhelm.com"
  },
  "homepage": "https://github.com/sjofartstidningen/services#readme",
  "license": "MIT",
  "private": true,
  "scripts": {
    "test": "jest",
    "lint": "eslint src --ext=.ts,.tsx,.js",
    "type-check": "tsc --noEmit",
    "build": "ncc build src/render-mail/index.ts -o build/render-mail --external aws-sdk",
    "deploy:staging": "serverless deploy -s staging",
    "deploy:production": "serverless deploy -s production",
    "deploy:render-mail:staging": "serverless deploy function -f render-mail -s staging",
    "deploy:render-mail:production": "serverless deploy function -f render-mail -s production",
    "invoke:valid": "serverless invoke local -s=development -f=render-mail -p=./events/render-mail.valid.json",
    "invoke:invalid-mjml": "serverless invoke local -s=development -f=render-mail -p=./events/render-mail.invalid-mjml.json",
    "invoke:invalid-body": "serverless invoke local -s=development -f=render-mail -p=./events/render-mail.invalid-body.json",
    "prepare": "husky install",
    "postinstall": "patch-package"
  },
  "dependencies": {
    "@aws-lambda-powertools/logger": "^1.4.1",
    "@middy/core": "^3.6.2",
    "@middy/util": "^3.6.2",
    "mjml": "^4.13.0",
    "zod": "^3.19.1"
  },
  "devDependencies": {
    "@babel/core": "^7.20.2",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-typescript": "^7.18.6",
    "@trivago/prettier-plugin-sort-imports": "^3.4.0",
    "@types/aws-lambda": "^8.10.108",
    "@types/jest": "^29.2.2",
    "@types/mjml": "^4.7.0",
    "@types/node": "^18.11.9",
    "@vercel/ncc": "^0.34.0",
    "eslint": "^8.27.0",
    "eslint-config-react-app": "^7.0.1",
    "husky": "^8.0.2",
    "jest": "^29.3.1",
    "lint-staged": "^13.0.3",
    "patch-package": "^6.5.0",
    "prettier": "^2.7.1",
    "serverless": "^3.24.1",
    "serverless-api-cloudfront": "^0.9.5",
    "typescript": "^4.8.4"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": [
      "eslint --fix"
    ],
    "*.{js,ts,jsx,tsx,json,md,yml,html}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "proseWrap": "always",
    "printWidth": 120,
    "importOrder": [
      "^node:(.*)$",
      "<THIRD_PARTY_MODULES>",
      "^~(.*)$",
      "^[./]"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true
  },
  "volta": {
    "node": "16.18.1"
  }
}
