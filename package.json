{
  "name": "services",
  "version": "0.0.0",
  "description": "A set of serverless services for Sj√∂fartstidningen",
  "main": "index.js",
  "repository": "https://github.com/sjofartstidningen/services.git",
  "author": "Adam Bergman <adam@fransvilhelm.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "test": "jest",
    "lint": "eslint misc services utils",
    "prebuild": "rm -rf build",
    "build": "yarn build:analytics && yarn build:render-main",
    "build:analytics": "ncc build services/analytics/index.js -o build/analytics",
    "build:render-main": "ncc build services/render-mail/index.js -o build/render-mail",
    "deploy": "lambi --env STAGE=${STAGE} --env-file .env 'yarn build && serverless deploy --stage=${STAGE}'",
    "deploy:analytics": "lambi --env STAGE=${STAGE} --env-file .env 'yarn build:analytics && serverless deploy --stage=${STAGE} -f analytics'",
    "deploy:render-mail": "lambi --env STAGE=${STAGE} --env-file .env 'yarn build:render-main && serverless deploy --stage=${STAGE} -f render-mail'"
  },
  "dependencies": {
    "aws-sdk": "^2.553.0",
    "axios": "^0.19.0",
    "date-fns": "^1.30.1",
    "googleapis": "^40.0.0",
    "handlebars": "^4.4.5",
    "http-errors": "^1.7.3",
    "lodash.deburr": "^4.1.0",
    "mjml": "^4.5.1",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@babel/core": "^7.6.4",
    "@babel/preset-env": "^7.6.3",
    "@fransvilhelm/lambi": "^2.0.0",
    "@types/node": "^12.11.2",
    "@typescript-eslint/eslint-plugin": "1.x",
    "@typescript-eslint/parser": "1.x",
    "@zeit/ncc": "^0.20.5",
    "babel-eslint": "10.0.3",
    "babel-jest": "^24.9.0",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.0.2",
    "dotenv": "^8.2.0",
    "eslint": "6.x",
    "eslint-config-react-app": "5.0.2",
    "eslint-plugin-flowtype": "3.x",
    "eslint-plugin-import": "2.x",
    "eslint-plugin-jsx-a11y": "6.x",
    "eslint-plugin-react": "7.x",
    "eslint-plugin-react-hooks": "1.x",
    "esm": "^3.2.25",
    "husky": "^3.0.9",
    "jest": "^24.9.0",
    "lint-staged": "^9.4.2",
    "prettier": "^1.18.2",
    "serverless": "^1.54.0",
    "serverless-api-cloudfront": "^0.9.5",
    "typescript": "^3.5.1"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "jest --env=node --passWithNoTests --findRelatedTests",
      "eslint --fix",
      "git add"
    ],
    "*.{js,ts,jsx,tsx,json,md,yml,html}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "proseWrap": "always"
  },
  "eslintConfig": {
    "extends": "react-app"
  }
}
