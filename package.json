{
  "name": "services",
  "version": "0.0.0",
  "description": "A set of serverless services for Sj√∂fartstidningen",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sjofartstidningen/services.git"
  },
  "author": {
    "name": "Adam Bergman",
    "email": "adam@fransvilhelm.com"
  },
  "homepage": "https://github.com/sjofartstidningen/services#readme",
  "license": "MIT",
  "private": true,
  "scripts": {
    "test": "jest",
    "lint": "eslint . --ext .ts --ext .tsx --ext .js",
    "prebuild": "rm -rf build",
    "build": "yarn build:analytics && yarn build:render-main",
    "build:analytics": "ncc build services/analytics/index.js -o build/analytics",
    "build:render-main": "ncc build services/render-mail/index.js -o build/render-mail",
    "deploy": "lambi --env STAGE=${STAGE} --env-file .env 'yarn build && serverless deploy --stage=${STAGE}'",
    "deploy:analytics": "lambi --env STAGE=${STAGE} --env-file .env 'yarn build:analytics && serverless deploy --stage=${STAGE} -f analytics'",
    "deploy:render-mail": "lambi --env STAGE=${STAGE} --env-file .env 'yarn build:render-main && serverless deploy --stage=${STAGE} -f render-mail'",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "aws-sdk": "^2.814.0",
    "axios": "^0.20.0",
    "date-fns": "^2.16.1",
    "googleapis": "^40.0.0",
    "handlebars": "^4.7.6",
    "http-errors": "^1.8.0",
    "lodash.deburr": "^4.1.0",
    "mjml": "^4.7.1",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/preset-env": "^7.11.5",
    "@fransvilhelm/lambi": "^2.0.0",
    "@types/jest": "^26.0.14",
    "@types/node": "^14.11.8",
    "@typescript-eslint/eslint-plugin": "^4.4.1",
    "@typescript-eslint/parser": "^4.4.1",
    "@vercel/ncc": "^0.24.1",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.5.2",
    "dotenv": "^8.2.0",
    "eslint": "^7.11.0",
    "eslint-config-react-app": "^5.2.1",
    "eslint-plugin-flowtype": "^5.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.21.4",
    "eslint-plugin-react-hooks": "^4.1.2",
    "esm": "^3.2.25",
    "husky": "^4.3.0",
    "jest": "^26.5.3",
    "lint-staged": "^10.4.0",
    "prettier": "^2.1.2",
    "serverless": "^1.54.0",
    "serverless-api-cloudfront": "^0.9.5",
    "typescript": "^4.0.3"
  },
  "eslintConfig": {
    "extends": "react-app",
    "rules": {
      "import/order": [
        "warn",
        {
          "newlines-between": "always",
          "groups": [
            "builtin",
            "external",
            "internal",
            [
              "parent",
              "sibling",
              "index"
            ]
          ]
        }
      ]
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": [
      "eslint --fix"
    ],
    "*.{js,ts,jsx,tsx,json,md,yml,html}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "proseWrap": "always"
  }
}
