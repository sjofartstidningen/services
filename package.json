{
  "name": "services",
  "version": "0.0.0",
  "description": "A set of serverless services for Sj√∂fartstidningen",
  "main": "index.js",
  "repository": "https://github.com/sjofartstidningen/services.git",
  "author": "Adam Bergman <adam@fransvilhelm.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "test": "jest --env=node",
    "prebuild": "rm -rf build",
    "build": "yarn build:analytics",
    "build:analytics": "parcel build services/analytics/index.js -d build/analytics --target node",
    "predeploy": "yarn run build",
    "deploy": "serverless deploy",
    "prepackage": "yarn run build",
    "package": "serverless package",
    "preinvoke": "yarn run build",
    "invoke": "serverless invoke local"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "date-fns": "^1.30.1",
    "esm": "^3.0.84",
    "googleapis": "^36.0.0",
    "handlebars": "^4.0.12",
    "lodash.deburr": "^4.1.0",
    "mjml": "^4.3.0"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.2.3",
    "aws-sdk": "^2.386.0",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^9.0.0",
    "babel-jest": "^23.6.0",
    "commitizen": "^3.0.5",
    "cz-conventional-changelog": "^2.1.0",
    "dotenv": "^6.2.0",
    "eslint": "^5.12.0",
    "eslint-config-react-app": "^3.0.6",
    "eslint-plugin-flowtype": "^2.50.3",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.12.3",
    "husky": "^1.3.1",
    "jest": "^23.6.0",
    "lint-staged": "^8.1.0",
    "parcel-bundler": "^1.11.0",
    "prettier": "^1.15.3",
    "serverless": "^1.35.1",
    "serverless-dotenv-plugin": "^2.0.1"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "concurrent": false,
    "linters": {
      "*.js": [
        "jest --env=node --passWithNoTests --findRelatedTests",
        "eslint --fix",
        "git add"
      ],
      "*.{js,json,css,md,html,yml}": [
        "prettier --write",
        "git add"
      ]
    }
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "proseWrap": "always"
  }
}
